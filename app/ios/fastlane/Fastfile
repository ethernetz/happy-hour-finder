default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match(type: "appstore", readonly: true)

      gym(
        configuration: "Release",
        workspace: "Runner.xcworkspace",
        scheme: "Runner",
        export_method: 'app-store',
        build_path: './build',
        output_directory: "./", # Destination directory. `.` means the current directory
        output_name: "Runner.ipa", # Name of the resulting `.ipa` file
        skip_build_archive: true, # Skip archiving, only package `.app` to `.ipa`
        skip_package_ipa: false, # Don't skip packaging to `.ipa`
        export_options: {
          method: 'app-store',
          provisioningProfiles: { 
            "com.ethannetz.happyhourfinder" => "Ethan Netz"
          }
        }
      )

    api_key = app_store_connect_api_key(
      key_id: ENV["API_KEY_ID"],
      issuer_id: ENV["ISSUER_ID"],
      key_content: ENV["API_KEY"],
      duration: 1200, # optional
      in_house: false # optional
    )

    # Increment the build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    pilot(
      api_key: api_key, 
      ipa: "./Runner.ipa",
      skip_submission: true,
    )
  end
end
